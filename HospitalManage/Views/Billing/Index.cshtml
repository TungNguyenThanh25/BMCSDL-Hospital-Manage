@model HospitalManage.Models.BillingViewModel

@{
    ViewData["Title"] = "Thanh toán viện phí";
}

<h2>🔍 Nhập mã hồ sơ bệnh án</h2>

<form asp-action="Process" method="post">
    <div class="form-group">
        <label asp-for="MedicalRecordId" class="control-label"></label>
        <input asp-for="MedicalRecordId" class="form-control" />
        <span asp-validation-for="MedicalRecordId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Xử lý hóa đơn</button>
</form>

<hr />

@if (ViewBag.Message != null)
{
    <div class="alert alert-info mt-3">@ViewBag.Message</div>
}

@if (Model != null && Model.TotalAmount > 0)
{
    <h3 class="mt-4">📄 Kết quả mã hóa hóa đơn</h3>
    <table class="table table-bordered">
        <tr><th>Mã hồ sơ</th><td>@Model.MedicalRecordId</td></tr>
        <tr><th>Phí khám</th><td>@Model.ExamFee VNĐ</td></tr>
        <tr><th>Tiền thuốc</th><td>@Model.DrugFee VNĐ</td></tr>
        <tr><th>Tổng tiền</th><td>@Model.TotalAmount VNĐ</td></tr>

        <tr class="table-primary"><th>AES (Tiền thuốc)</th><td>@Model.EncryptedDrugFee</td></tr>
        <tr class="table-warning"><th>RSA (Phí khám)</th><td>@Model.EncryptedExamFee</td></tr>
        <tr class="table-success"><th>Hybrid - Dữ liệu (Tổng)</th><td>@Model.EncryptedHybridData</td></tr>
        <tr class="table-success"><th>Hybrid - Khóa AES</th><td>@Model.EncryptedHybridKey</td></tr>
    </table>

    <div class="mt-3">
        <a asp-action="DecryptBill" asp-route-recordId="@Model.MedicalRecordId" class="btn btn-warning">🔓 Giải mã hóa đơn</a>
        <a asp-action="Index" class="btn btn-secondary">↩ Nhập hồ sơ khác</a>
    </div>
}

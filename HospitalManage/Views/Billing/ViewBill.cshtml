@model HospitalManage.Models.BillingViewModel

@{
    ViewData["Title"] = "Xem hóa đơn";
}

<h2>Thông tin hóa đơn đã mã hóa</h2>

@if (ViewBag.Message != null)
{
    <div class="alert alert-info">@ViewBag.Message</div>
}

@if (Model != null && Model.TotalAmount > 0)
{
    <table class="table table-bordered">
        <tr><th>Mã hồ sơ</th><td>@Model.MedicalRecordId</td></tr>
        <tr><th>Phí khám</th><td>@Model.ExamFee VNĐ</td></tr>
        <tr><th>Tiền thuốc</th><td>@Model.DrugFee VNĐ</td></tr>
        <tr><th>Tổng tiền</th><td>@Model.TotalAmount VNĐ</td></tr>

        <tr class="table-primary"><th>Mã hóa AES (Tiền thuốc)</th><td>@Model.EncryptedDrugFee</td></tr>
        <tr class="table-warning"><th>Mã hóa RSA (Phí khám)</th><td>@Model.EncryptedExamFee</td></tr>
        <tr class="table-success"><th>Mã hóa Hybrid - Dữ liệu (Tổng)</th><td>@Model.EncryptedHybridData</td></tr>
        <tr class="table-success"><th>Mã hóa Hybrid - Khóa AES</th><td>@Model.EncryptedHybridKey</td></tr>
    </table>

    <div class="mt-3">
        <a asp-action="DecryptBill" asp-route-recordId="@Model.MedicalRecordId" class="btn btn-warning">🔓 Giải mã hóa đơn</a>
        <a asp-action="Index" class="btn btn-secondary">↩ Quay lại</a>
    </div>
}
else
{
    <p class="text-danger">Không tìm thấy hóa đơn cho hồ sơ này.</p>
    <a asp-action="Index" class="btn btn-secondary">↩ Quay lại</a>
}

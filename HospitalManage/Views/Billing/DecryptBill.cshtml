@model HospitalManage.Models.BillingViewModel

@{
    ViewData["Title"] = "Giải mã hóa đơn";
}

<h2>🔓 Kết quả giải mã hóa đơn</h2>

@if (ViewBag.Message != null)
{
    <div class="alert alert-info">@ViewBag.Message</div>
}

@if (Model != null && Model.TotalAmount > 0)
{
    <table class="table table-bordered">
        <tr><th>Mã hồ sơ</th><td>@Model.MedicalRecordId</td></tr>
        <tr><th>Phí khám (giải mã RSA)</th><td>@Model.ExamFee VNĐ</td></tr>
        <tr><th>Tiền thuốc (giải mã AES)</th><td>@Model.DrugFee VNĐ</td></tr>
        <tr><th>Tổng tiền (giải mã Hybrid)</th><td>@Model.TotalAmount VNĐ</td></tr>
    </table>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">↩ Quay lại nhập hồ sơ</a>
    </div>
}
else
{
    <p class="text-danger">Không tìm thấy hóa đơn hoặc không thể giải mã.</p>
    <a asp-action="Index" class="btn btn-secondary">↩ Quay lại</a>
}

@model HospitalManage.Models.BillingViewModel

@{
    ViewData["Title"] = "Giải mã hóa đơn";
}

<h2>Kết quả giải mã hóa đơn</h2>

@if (ViewBag.Message != null)
{
    <div class="alert alert-info">@ViewBag.Message</div>
}

@if (Model != null && Model.TotalAmount >= 0)
{
    <table class="table table-bordered">
        <tr>
            <th>Mã hồ sơ</th>
            <td>@Model.MedicalRecordId</td>
        </tr>
        <tr>
            <th>Tổng tiền (sau giải mã)</th>
            <td>@Model.TotalAmount VNĐ</td>
        </tr>
        <tr>
            <th>Hybrid - Dữ liệu</th>
            <td>@Model.EncryptedHybridData</td>
        </tr>
        <tr>
            <th>Hybrid - Khóa</th>
            <td>@Model.EncryptedHybridKey</td>
        </tr>
    </table>

    <a asp-action="ViewBill" asp-route-recordId="@Model.MedicalRecordId" class="btn btn-secondary">Quay lại hóa đơn</a>
}
else
{
    <p class="text-danger">Không thể giải mã hóa đơn hoặc không tìm thấy dữ liệu.</p>
    <a asp-action="Index" class="btn btn-primary">Quay lại nhập hóa đơn</a>
}
